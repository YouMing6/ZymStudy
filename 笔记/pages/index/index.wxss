/* pages/index/index.wxss */
.body{margin: 0px;padding: 0px;}
.marquee{
  width: 100%;
  height: 34px;
  display: flex;
  align-items: center;
  /* background-color: #aed4ff; */
  margin-bottom: 1px;
}
.marquee-icon{
  width: 34px;
  height: 34px;
  margin: 3px; 
  animation:scale 0.5s linear infinite;
}
@keyframes scale{
  from{transform:scale(0.6,0.6) }
  to{transform:scale(0.8,0.8) }
}
.marquee-text{
  width: 95%;
  height: 34px;
  margin: 0 2px;
  overflow: hidden;
  display: flex;
  align-items: center;
  font-size: 38rpx;
  white-space: nowrap;/*文字内容只一行显示*/
}

@keyframes marquee
{
from {left: 100%;}
to {left:-300%;}
}
.animation{
  position:relative;
  animation:marquee 10s linear infinite;
}

.stop{
  width: 34px;
  height: 34px;
  background-color: rgba(255,255,255,0)
}



